<style>

    .c {
        text-align: center;
        padding: 16px;
        display: block;
        position: relative;
        background-image: url(https://png.pngtree.com/thumb_back/fw800/back_our/20190622/ourmid/pngtree-blue-minimalistic-flat-medical-health-banner-background-image_210029.jpg);
        background-size: cover;
        background-position: center;
    }
    ._404 {
        font-size:120px;
        color: white;
        position: initial;
        display: inline-block;
        z-index: 2;
        letter-spacing: 15px;
        color: midnightblue;
    }
    ._1 {
        text-align: center;
        color: white;
        display: block;
        position: relative;
        letter-spacing: 12px;
        font-size: 4em;
        line-height: 80%;
        margin: 20px;
        color: midnightblue;
    }
    ._2 {
        text-align: center;
        color: white;
